{
  "version": 2,
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json", 
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "functions": {
    "api/app.py": {
      "includeFiles": "backend/**",
      "maxDuration": 30
    }
  },
  "env": {
    "TRAINER_EMAIL": "@trainer_email",
    "TRAINER_PASSWORD": "@trainer_password"
  },
  "build": {
    "env": {
      "ENABLE_VC_BUILD": "1"
    }
  },
  "github": {
    "silent": true
  }
}